@page "/finish-registration"
@inject NavigationManager Navigation
@inject ILogger<FinishRegistration> Logger
@inject AuthStateService AuthState
@inject StudyHub.DAL.StudyContext context

<div class="auth-container">
    <div class="auth-logo">
        <img src="images/hat.png" alt="StudyHub" class="auth-logo-icon" />
        <h1 class="auth-logo-text"><span class="title-study">STUDY</span><span class="title-hub">HUB</span></h1>
    </div>
    <div class="auth-card">
        <div class="auth-mascot">
            <img src="images/fireduck.png" alt="FireDucks" />
        </div>

        <h2 class="auth-title">Finish registration</h2>

        <div class="auth-form">
            <div class="form-group">
                <label>Password:</label>
                <input type="password" @bind="password" class="form-input" placeholder="***********" />
                @if (showError && string.IsNullOrEmpty(password))
                {
                    <span class="validation-message">Password is required</span>
                }
            </div>
            <div class="form-group">
                <label>Confirm password:</label>
                <input type="password" @bind="confirmPassword" class="form-input" placeholder="***********" />
                @if (showError && !string.IsNullOrEmpty(errorMessage))
                {
                    <span class="validation-message">@errorMessage</span>
                }
            </div>
            @if (showSuccess)
            {
                <div class="success-message">
                    ✓ Successfully registered! Redirecting to login...
                </div>
            }
            <button class="auth-btn" @onclick="CompleteRegistration" disabled="@showSuccess">Sign up</button>
        </div>
    </div>
</div>

@code {
    private string password = "";
    private string confirmPassword = "";
    private bool showError = false;
    private bool showSuccess = false;
    private string errorMessage = "";

    protected override void OnInitialized()
    {
        Logger.LogInformation("Відкриття сторінки завершення реєстрації");
    }

    private async Task CompleteRegistration()
    {
        Logger.LogInformation("Початок завершення реєстрації");

        showError = false;
        showSuccess = false;
        errorMessage = "";

        if (string.IsNullOrWhiteSpace(password))
        {
            showError = true;
            Logger.LogWarning("Валідація не пройдена: порожній пароль");
            return;
        }

        if (password != confirmPassword)
        {
            showError = true;
            errorMessage = "Passwords do not match";
            Logger.LogWarning("Валідація не пройдена: паролі не співпадають");
            return;
        }

        if (password.Length < 5)
        {
            showError = true;
            errorMessage = "Password must be at least 5 characters";
            Logger.LogWarning("Валідація не пройдена: пароль занадто короткий (довжина: {PasswordLength})",
                password.Length);
            return;
        }

        Logger.LogInformation("Валідація пройдена успішно");

        try
        {
            Logger.LogInformation("Реєстрація успішно завершена");

            showSuccess = true;
            StateHasChanged();
            await Task.Delay(2000);

            Logger.LogInformation("Перенаправлення на сторінку входу");
            Navigation.NavigateTo("/login");
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Помилка при завершенні реєстрації");
            showError = true;
            errorMessage = "Registration failed. Please try again.";
        }
    }
}