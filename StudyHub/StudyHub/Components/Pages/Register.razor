@page "/register"

<div class="min-h-screen bg-gradient-to-br from-purple-50 to-pink-100 flex items-center justify-center p-8">
    <div class="bg-white rounded-3xl shadow-2xl p-12 max-w-lg w-full">

        <div class="text-center mb-8">
            <div class="text-6xl mb-4">🎓</div>
            <h1 class="text-4xl font-bold text-gray-800 mb-2">Create Account</h1>
            <p class="text-gray-500">Join StudyHub and stay organized!</p>
        </div>

        <div class="space-y-6">

            <div class="grid grid-cols-2 gap-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Name</label>
                    <input type="text" placeholder="Name"
                           class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500" />
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Surname</label>
                    <input type="text" placeholder="Surname"
                           class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500" />
                </div>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">E-mail</label>
                <input type="email" placeholder="student@lnu.edu.ua"
                       class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500" />
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Group</label>
                <select class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500">
                    <option value="">Choose your group</option>
                    <option value="Group A">Group A</option>
                    <option value="Group B">Group B</option>
                    <option value="Group C">Group C</option>
                </select>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Password</label>
                <input type="password" placeholder="Create a password"
                       class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500" />
            </div>

            <div class="pt-2">
                <button class="w-full bg-green-500 hover:bg-green-600 text-white py-3 rounded-lg font-semibold text-lg transition-all">
                    Sign Up
                </button>
            </div>

            <div class="!mt-4">
                <a href="/" class="block w-full bg-gradient-to-r from-purple-500 to-pink-500 text-white text-center py-3 rounded-xl font-semibold hover:shadow-lg transition-all">
                    ← Back to Home
                </a>
            </div>

            <div class="text-center text-gray-500 !mt-6"> Already have an account?
                <a href="/login" class="font-medium text-green-600 hover:underline">
                    Log In
                </a>
            </div>
        </div>
    </div>
</div>

