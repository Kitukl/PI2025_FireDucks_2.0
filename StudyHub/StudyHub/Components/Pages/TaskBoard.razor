@page "/taskboard"

<div class="min-h-screen bg-gradient-to-br from-green-50 to-emerald-100 p-8">
    <div class="max-w-7xl mx-auto">
        <div class="bg-white rounded-3xl shadow-2xl p-8">
            <div class="flex items-center justify-between mb-8">
                <div>
                    <h1 class="text-4xl font-bold text-gray-800 flex items-center gap-3">
                        <span class="text-5xl">📋</span>
                        Task Board
                    </h1>
                    <p class="text-gray-500 mt-2">Manage your tasks with Kanban board</p>
                </div>
                <a href="/" class="px-6 py-3 bg-gray-100 hover:bg-gray-200 rounded-xl font-semibold transition-all">
                    ← Home
                </a>
            </div>

            <div class="grid grid-cols-3 gap-6">

                <div class="bg-red-50 rounded-2xl p-6">
                    <h3 class="text-xl font-bold text-red-700 mb-4 flex items-center gap-2">
                        <span>📝</span> To Do
                    </h3>
                    <div class="space-y-3">
                        <div class="bg-white p-4 rounded-xl shadow-sm hover:shadow-md transition-shadow cursor-pointer">
                            <p class="font-semibold text-gray-800">Sample Task 1</p>
                            <p class="text-sm text-gray-500 mt-1">Due: Tomorrow</p>
                        </div>
                    </div>
                </div>

                <div class="bg-yellow-50 rounded-2xl p-6">
                    <h3 class="text-xl font-bold text-yellow-700 mb-4 flex items-center gap-2">
                        <span>⏳</span> In Progress
                    </h3>
                    <div class="space-y-3">
                        <div class="bg-white p-4 rounded-xl shadow-sm hover:shadow-md transition-shadow cursor-pointer">
                            <p class="font-semibold text-gray-800">Sample Task 2</p>
                            <p class="text-sm text-gray-500 mt-1">Due: Next week</p>
                        </div>
                    </div>
                </div>

                <div class="bg-green-50 rounded-2xl p-6">
                    <h3 class="text-xl font-bold text-green-700 mb-4 flex items-center gap-2">
                        <span>✅</span> Done
                    </h3>
                    <div class="space-y-3">
                        <div class="bg-white p-4 rounded-xl shadow-sm opacity-75">
                            <p class="font-semibold text-gray-800 line-through">Completed Task</p>
                            <p class="text-sm text-gray-500 mt-1">Completed yesterday</p>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>