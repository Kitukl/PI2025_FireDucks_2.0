@page "/taskboard"
@using StudyHub.BLL.Models

<div class="min-h-screen bg-gray-50 p-6">
    <div class="max-w-7xl mx-auto">
        <div class="mb-6 flex justify-between items-center">
            <h1 class="text-3xl font-bold text-gray-800">Task Board</h1>

            <div class="flex gap-4 items-center">

                <a href="/"
                   class="bg-gradient-to-r from-purple-500 to-pink-500 text-white px-4 py-2 rounded-lg font-semibold hover:shadow-lg transition-all">
                    ← Home
                </a>

                <button @onclick="OpenCreateTaskModal"
                        class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg flex items-center gap-2">
                    <span>+</span> Create Task
                </button>
            </div>
        </div>

        <div class="mb-6 flex gap-4">
            <input type="text"
                   placeholder="Search..."
                   @bind="searchQuery"
                   @bind:event="oninput"
                   class="flex-1 px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" />
            <select @bind="filterSubject" class="px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                <option value="">Filter By Subject</option>
                <option value="Subject A">Subject A</option>
                <option value="Subject B">Subject B</option>
                <option value="Subject C">Subject C</option>
            </select>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
            <div class="bg-white rounded-lg shadow-sm border border-gray-200">
                <div class="p-4 border-b border-gray-200">
                    <h2 class="font-semibold text-lg text-gray-700">To Do</h2>
                    <span class="text-sm text-gray-500">@GetTasksByStatus("To Do").Count() tasks</span>
                </div>
                <div class="p-4 space-y-3 min-h-[400px]">
                    @foreach (var task in GetTasksByStatus("To Do"))
                    {
                        <div class="bg-gray-50 rounded-lg p-3 cursor-pointer hover:shadow-md transition border border-gray-200"
                             @onclick="() => OpenTaskDetails(task)">
                            <h3 class="font-semibold text-sm mb-1">@task.Name</h3>
                            <p class="text-xs text-gray-600 mb-2">@task.Subject</p>
                            <span class="inline-block bg-blue-100 text-blue-800 text-xs px-2 py-1 rounded">
                                @task.Code
                            </span>
                        </div>
                    }
                </div>
            </div>

            <div class="bg-white rounded-lg shadow-sm border border-gray-200">
                <div class="p-4 border-b border-gray-200">
                    <h2 class="font-semibold text-lg text-yellow-700">In Progress</h2>
                    <span class="text-sm text-gray-500">@GetTasksByStatus("In Progress").Count() tasks</span>
                </div>
                <div class="p-4 space-y-3 min-h-[400px]">
                    @foreach (var task in GetTasksByStatus("In Progress"))
                    {
                        <div class="bg-yellow-50 rounded-lg p-3 cursor-pointer hover:shadow-md transition border border-yellow-200"
                             @onclick="() => OpenTaskDetails(task)">
                            <h3 class="font-semibold text-sm mb-1">@task.Name</h3>
                            <p class="text-xs text-gray-600 mb-2">@task.Subject</p>
                            <span class="inline-block bg-yellow-100 text-yellow-800 text-xs px-2 py-1 rounded">
                                @task.Code
                            </span>
                        </div>
                    }
                </div>
            </div>

            <div class="bg-white rounded-lg shadow-sm border border-gray-200">
                <div class="p-4 border-b border-gray-200">
                    <h2 class="font-semibold text-lg text-purple-700">For Review</h2>
                    <span class="text-sm text-gray-500">@GetTasksByStatus("For Review").Count() tasks</span>
                </div>
                <div class="p-4 space-y-3 min-h-[400px]">
                    @foreach (var task in GetTasksByStatus("For Review"))
                    {
                        <div class="bg-purple-50 rounded-lg p-3 cursor-pointer hover:shadow-md transition border border-purple-200"
                             @onclick="() => OpenTaskDetails(task)">
                            <h3 class="font-semibold text-sm mb-1">@task.Name</h3>
                            <p class="text-xs text-gray-600 mb-2">@task.Subject</p>
                            <span class="inline-block bg-purple-100 text-purple-800 text-xs px-2 py-1 rounded">
                                @task.Code
                            </span>
                        </div>
                    }
                </div>
            </div>

            <div class="bg-white rounded-lg shadow-sm border border-gray-200">
                <div class="p-4 border-b border-gray-200">
                    <h2 class="font-semibold text-lg text-green-700">Done</h2>
                    <span class="text-sm text-gray-500">@GetTasksByStatus("Done").Count() tasks</span>
                </div>
                <div class="p-4 space-y-3 min-h-[400px]">
                    @foreach (var task in GetTasksByStatus("Done"))
                    {
                        <div class="bg-green-50 rounded-lg p-3 cursor-pointer hover:shadow-md transition border border-green-200"
                             @onclick="() => OpenTaskDetails(task)">
                            <h3 class="font-semibold text-sm mb-1">@task.Name</h3>
                            <p class="text-xs text-gray-600 mb-2">@task.Subject</p>
                            <span class="inline-block bg-green-100 text-green-800 text-xs px-2 py-1 rounded">
                                @task.Code
                            </span>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    @if (showCreateModal)
    {
        <div class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50"
             @onclick="CloseCreateTaskModal">
            <div class="bg-white rounded-lg p-6 w-full max-w-lg m-4" @onclick:stopPropagation>
                <h2 class="text-2xl font-bold mb-4">Create Task</h2>

                <div class="space-y-4">
                    <div>
                        <label class="block text-sm font-medium mb-1">Task Name</label>
                        <input @bind="newTaskName"
                               placeholder="Name your task..."
                               class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" />
                    </div>

                    <div>
                        <label class="block text-sm font-medium mb-1">Description</label>
                        <textarea @bind="newTaskDescription"
                                  placeholder="Please describe what needs to be done..."
                                  rows="4"
                                  class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"></textarea>
                    </div>

                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <label class="block text-sm font-medium mb-1">Subject</label>
                            <select @bind="newTaskSubject" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                                <option value="">Choose subject</option>
                                <option value="Subject A">Subject A</option>
                                <option value="Subject B">Subject B</option>
                                <option value="Subject C">Subject C</option>
                            </select>
                        </div>

                        <div>
                            <label class="block text-sm font-medium mb-1">Due Date</label>
                            <input type="date" @bind="newTaskDueDate"
                                   class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" />
                        </div>
                    </div>

                    <div>
                        <label class="block text-sm font-medium mb-1">Reminder</label>
                        <div class="flex items-center gap-2">
                            <input type="number" @bind="newTaskReminderDays"
                                   class="w-20 px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" />
                            <span class="text-sm">days before due date</span>
                        </div>
                    </div>
                </div>

                <div class="mt-6 flex gap-3 justify-end">
                    <button @onclick="CloseCreateTaskModal"
                            class="px-4 py-2 text-gray-600 hover:bg-gray-100 rounded-lg">
                        Cancel
                    </button>
                    <button @onclick="CreateNewTask"
                            class="px-4 py-2 bg-blue-600 text-white hover:bg-blue-700 rounded-lg">
                        Create
                    </button>
                </div>
            </div>
        </div>
    }

    @if (selectedTask != null)
    {
        <div class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50"
             @onclick="CloseTaskDetails">
            <div class="bg-white rounded-lg p-6 w-full max-w-2xl max-h-[90vh] overflow-y-auto m-4"
                 @onclick:stopPropagation>

                <div class="flex justify-between items-start mb-6">
                    <div>
                        <h2 class="text-2xl font-bold">@selectedTask.Name</h2>
                        <p class="text-sm text-gray-600">@selectedTask.Code</p>
                    </div>
                    <button @onclick="CloseTaskDetails" class="text-gray-400 hover:text-gray-600 text-2xl">×</button>
                </div>

                <div class="grid grid-cols-2 gap-4 mb-6">
                    <div>
                        <label class="block text-sm font-medium text-gray-600">Subject</label>
                        <p class="text-base mt-1">@selectedTask.Subject</p>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-600">Status</label>
                        <select @bind="selectedTaskStatus" class="w-full mt-1 px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                            <option value="To Do">To Do</option>
                            <option value="In Progress">In Progress</option>
                            <option value="For Review">For Review</option>
                            <option value="Done">Done</option>
                        </select>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-600">Due Date</label>
                        <p class="text-base mt-1">@(selectedTask.DueDate?.ToString("dd/MM/yyyy") ?? "Not set")</p>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-600">Creation Date</label>
                        <p class="text-base mt-1">@selectedTask.CreationDate.ToString("dd/MM/yyyy")</p>
                    </div>
                </div>

                <div class="mb-6">
                    <label class="block text-sm font-medium text-gray-600 mb-2">Description</label>
                    <div class="bg-gray-50 p-4 rounded-lg border border-gray-200">
                        <p class="text-sm">@selectedTask.Description</p>
                    </div>
                </div>

                <div class="mb-6">
                    <label class="block text-sm font-medium text-gray-600 mb-2">Notes and Attachments</label>
                    <textarea placeholder="Add notes..."
                          rows="3"
                          class="w-full px-3 py-2 border border-gray-300 rounded-lg mb-2 focus:outline-none focus:ring-2 focus:ring-blue-500"></textarea>
                    <button class="text-sm text-blue-600 hover:text-blue-700">+ Add Files</button>
                </div>

                <div class="flex gap-3 justify-end">
                    <button @onclick="CloseTaskDetails"
                            class="px-4 py-2 text-gray-600 hover:bg-gray-100 rounded-lg">
                        Back to the board
                    </button>
                    <button @onclick="SaveTaskChanges"
                            class="px-4 py-2 bg-blue-600 text-white hover:bg-blue-700 rounded-lg">
                        Done
                    </button>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private List<TaskItem> tasks = new();
    private string searchQuery = "";
    private string filterSubject = "";
    private bool showCreateModal = false;
    private TaskItem? selectedTask = null;
    private string selectedTaskStatus = "";

    // Create task fields
    private string newTaskName = "";
    private string newTaskDescription = "";
    private string newTaskSubject = "";
    private DateTime? newTaskDueDate;
    private int newTaskReminderDays = 2;

    protected override void OnInitialized()
    {
        LoadTasks();
    }

    private void LoadTasks()
    {
        // Тестові дані - замінити на завантаження з бази даних
        tasks = new List<TaskItem>
        {
            new TaskItem { Id = 1, Name = "New Task#1", Subject = "Subject A", Code = "A-1", Status = "To Do", Description = "Complete the first assignment", DueDate = DateTime.Now.AddDays(7) },
            new TaskItem { Id = 2, Name = "New Task#2", Subject = "Subject B", Code = "B-1", Status = "In Progress", Description = "Work on project B", DueDate = DateTime.Now.AddDays(5) },
            new TaskItem { Id = 3, Name = "New Task#3", Subject = "Subject C", Code = "C-1", Status = "To Do", Description = "Study for exam", DueDate = DateTime.Now.AddDays(10) },
            new TaskItem { Id = 4, Name = "New Task#4", Subject = "Subject B", Code = "B-2", Status = "For Review", Description = "Submit report for review", DueDate = DateTime.Now.AddDays(3) },
            new TaskItem { Id = 5, Name = "New Task#5", Subject = "Subject A", Code = "A-2", Status = "Done", Description = "Create presentation", DueDate = DateTime.Now.AddDays(-2) },
            new TaskItem { Id = 6, Name = "New Task#6", Subject = "Subject C", Code = "C-2", Status = "In Progress", Description = "Lab work completion", DueDate = DateTime.Now.AddDays(4) },
            new TaskItem { Id = 7, Name = "New Task#7", Subject = "Subject A", Code = "A-3", Status = "To Do", Description = "Read chapters 5-7", DueDate = DateTime.Now.AddDays(6) },
        };
    }

    private IEnumerable<TaskItem> GetTasksByStatus(string status)
    {
        return tasks.Where(t => t.Status == status &&
                               (string.IsNullOrEmpty(searchQuery) || t.Name.Contains(searchQuery, StringComparison.OrdinalIgnoreCase)) &&
                               (string.IsNullOrEmpty(filterSubject) || t.Subject == filterSubject));
    }

    private void OpenCreateTaskModal()
    {
        showCreateModal = true;
        ResetCreateForm();
    }

    private void CloseCreateTaskModal()
    {
        showCreateModal = false;
        ResetCreateForm();
    }

    private void ResetCreateForm()
    {
        newTaskName = "";
        newTaskDescription = "";
        newTaskSubject = "";
        newTaskDueDate = null;
        newTaskReminderDays = 2;
    }

    private void OpenTaskDetails(TaskItem task)
    {
        selectedTask = task;
        selectedTaskStatus = task.Status;
    }

    private void CloseTaskDetails()
    {
        selectedTask = null;
    }

    private void CreateNewTask()
    {
        if (string.IsNullOrWhiteSpace(newTaskName))
            return;

        var taskCount = tasks.Count(t => t.Subject == newTaskSubject) + 1;
        var subjectCode = newTaskSubject.Replace("Subject ", "");

        var newTask = new TaskItem
        {
            Id = tasks.Count > 0 ? tasks.Max(t => t.Id) + 1 : 1,
            Name = newTaskName,
            Description = newTaskDescription,
            Subject = newTaskSubject,
            Code = $"{subjectCode}-{taskCount}",
            DueDate = newTaskDueDate,
            CreationDate = DateTime.Now,
            Status = "To Do",
            ReminderDays = newTaskReminderDays
        };

        tasks.Add(newTask);
        CloseCreateTaskModal();
    }

    private void SaveTaskChanges()
    {
        if (selectedTask != null)
        {
            selectedTask.Status = selectedTaskStatus;
            // TODO: Зберегти зміни в базі даних
        }
        CloseTaskDetails();
    }
}