@code {
    private List<TaskItem> tasks = new();
    private List<CommentItem> taskComments = new();
    private string searchQuery = "";
    private string filterSubject = "";
    private bool showCreateModal = false;
    private bool showFilterDropdown = false;
    private TaskItem? selectedTask = null;
    private string selectedTaskStatus = "";
    private string taskNotes = "";
    private bool isEditMode = false;
    private string editTaskName = "";
    private string editTaskDescription = "";
    private string editTaskSubject = "";
    private DateTime? editTaskDueDate;
    private bool isLoading = false;
    private string errorMessage = "";

    private string newTaskName = "";
    private string newTaskDescription = "";
    private string newTaskSubject = "";
    private DateTime? newTaskDueDate;
    private int newTaskReminderDays = 2;

    private int? editingCommentId = null;
    private string editingCommentText = "";


    protected override async System.Threading.Tasks.Task OnInitializedAsync()
    {
        Logger.LogInformation("Ініціалізація сторінки Taskboard");

        if (!AuthState.IsAuthenticated)
        {
            Logger.LogWarning("Спроба доступу до Taskboard без автентифікації. Перенаправлення на /login");
            Navigation.NavigateTo("/login");
            return;
        }

        Logger.LogInformation("Користувач автентифікований: UserId={UserId}", AuthState.UserId);
        await LoadTasks();
    }

    private async System.Threading.Tasks.Task LoadTasks()
    {
        if (!AuthState.UserId.HasValue)
        {
            Logger.LogWarning("Спроба завантажити завдання без UserId");
            return;
        }

        Logger.LogInformation("Завантаження завдань для користувача: UserId={UserId}", AuthState.UserId.Value);
        errorMessage = "";

        try
        {
            isLoading = true;
            tasks = await TaskService.GetUserTasksAsync(AuthState.UserId.Value);

            Logger.LogInformation("Завдання успішно завантажено: {TaskCount} шт, UserId={UserId}",
                tasks.Count, AuthState.UserId.Value);

            var statusCounts = tasks.GroupBy(t => t.Status)
                .Select(g => $"{g.Key}: {g.Count()}");
            Logger.LogInformation("Розподіл по статусам: {StatusDistribution}", string.Join(", ", statusCounts));
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Помилка завантаження завдань: UserId={UserId}", AuthState.UserId.Value);
            errorMessage = $"Failed to load tasks: {ex.Message}";
            tasks = new List<TaskItem>();
        }
        finally
        {
            isLoading = false;
        }
    }

    private async System.Threading.Tasks.Task LoadCommentsForTask(int taskId)
    {
        Logger.LogInformation("Завантаження коментарів для завдання: TaskId={TaskId}", taskId);

        try
        {
            taskComments = await TaskService.GetTaskCommentsAsync(taskId);
            Logger.LogInformation("Завантажено {CommentCount} коментарів для TaskId={TaskId}",
                taskComments.Count, taskId);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Помилка завантаження коментарів: TaskId={TaskId}", taskId);
            taskComments = new List<CommentItem>();
        }
    }

    private IEnumerable<string> GetUniqueSubjects()
    {
        return tasks
            .Where(t => !string.IsNullOrEmpty(t.Subject))
            .Select(t => t.Subject)
            .Distinct()
            .OrderBy(s => s);
    }

    private IEnumerable<TaskItem> GetTasksByStatus(string status)
    {
        return tasks
            .Where(t => t.Status == status &&
                        (string.IsNullOrEmpty(searchQuery) || t.Name.Contains(searchQuery, StringComparison.OrdinalIgnoreCase)) &&
                        (string.IsNullOrEmpty(filterSubject) || t.Subject == filterSubject));
    }

    private void ToggleFilterDropdown()
    {
        showFilterDropdown = !showFilterDropdown;
    }

    private void CloseFilterDropdown()
    {
        showFilterDropdown = false;
    }

    private void SetFilter(string subject)
    {
        Logger.LogInformation("Застосовано фільтр: Subject={Subject}", subject ?? "All");
        filterSubject = subject;
        showFilterDropdown = false;
        StateHasChanged();
    }

    private void HandleFilterAll() => SetFilter("");

    private void OpenCreateTaskModal()
    {
        Logger.LogInformation("Відкриття модального вікна створення завдання");
        errorMessage = "";
        showCreateModal = true;
        ResetCreateForm();
    }

    private void CloseCreateTaskModal()
    {
        showCreateModal = false;
        ResetCreateForm();
    }

    private void ResetCreateForm()
    {
        newTaskName = "";
        newTaskDescription = "";
        newTaskSubject = "";
        newTaskDueDate = null;
        newTaskReminderDays = 2;
    }

    private async System.Threading.Tasks.Task OpenTaskDetails(TaskItem task)
    {
        Logger.LogInformation("Відкриття деталей завдання: TaskId={TaskId}, Name={TaskName}",
            task.Id, task.Name);

        errorMessage = "";
        selectedTask = task;
        selectedTaskStatus = task.Status;
        taskNotes = "";
        isEditMode = false;
        editingCommentId = null;
        editingCommentText = "";

        editTaskName = task.Name;
        editTaskDescription = task.Description;
        editTaskSubject = task.Subject;
        editTaskDueDate = task.DueDate;

        await LoadCommentsForTask(task.Id);
    }

    private void CloseTaskDetails()
    {
        if (selectedTask != null)
        {
            Logger.LogInformation("Закриття деталей завдання: TaskId={TaskId}", selectedTask.Id);
        }

        selectedTask = null;
        taskNotes = "";
        isEditMode = false;
        taskComments = new List<CommentItem>();
        editingCommentId = null;
        editingCommentText = "";
    }

    private async System.Threading.Tasks.Task CreateNewTask()
    {
        if (string.IsNullOrWhiteSpace(newTaskName) || string.IsNullOrWhiteSpace(newTaskSubject))
        {
            Logger.LogWarning("Спроба створити завдання з порожніми полями");
            return;
        }

        if (!AuthState.UserId.HasValue)
        {
            Logger.LogWarning("Спроба створити завдання без UserId");
            return;
        }

        Logger.LogInformation("Створення нового завдання: Name={TaskName}, Subject={Subject}, UserId={UserId}",
            newTaskName, newTaskSubject, AuthState.UserId.Value);

        try
        {
            isLoading = true;
            await TaskService.CreateTaskAsync(
                AuthState.UserId.Value,
                newTaskName,
                newTaskDescription,
                newTaskSubject,
                newTaskDueDate ?? DateTime.Now.AddDays(7),
                Status.InProgress
            );

            Logger.LogInformation("Завдання успішно створено: Name={TaskName}, UserId={UserId}",
                newTaskName, AuthState.UserId.Value);

            await LoadTasks();
            CloseCreateTaskModal();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Помилка створення завдання: Name={TaskName}, UserId={UserId}",
                newTaskName, AuthState.UserId.Value);
            errorMessage = $"Failed to create task: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void ToggleEditMode()
    {
        isEditMode = !isEditMode;
        Logger.LogInformation("Режим редагування: {EditMode}, TaskId={TaskId}",
            isEditMode ? "увімкнено" : "вимкнено", selectedTask?.Id);

        if (!isEditMode && selectedTask != null)
        {
            editTaskName = selectedTask.Name;
            editTaskDescription = selectedTask.Description;
            editTaskSubject = selectedTask.Subject;
            editTaskDueDate = selectedTask.DueDate;
        }
    }

    private async System.Threading.Tasks.Task SaveTaskChanges()
    {
        if (selectedTask == null)
        {
            Logger.LogWarning("Спроба зберегти зміни без вибраного завдання");
            return;
        }

        Logger.LogInformation("Збереження змін завдання: TaskId={TaskId}, EditMode={EditMode}, StatusChanged={StatusChanged}",
            selectedTask.Id, isEditMode, selectedTaskStatus != selectedTask.Status);

        try
        {
            isLoading = true;

            await TaskService.UpdateTaskAsync(
                selectedTask.Id,
                isEditMode ? editTaskName : selectedTask.Name,
                isEditMode ? editTaskDescription : selectedTask.Description,
                isEditMode ? editTaskSubject : selectedTask.Subject,
                selectedTaskStatus,
                isEditMode ? editTaskDueDate : selectedTask.DueDate
            );

            Logger.LogInformation("Зміни успішно збережено: TaskId={TaskId}", selectedTask.Id);

            await LoadTasks();
            CloseTaskDetails();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Помилка збереження змін: TaskId={TaskId}", selectedTask.Id);
            errorMessage = $"Failed to save changes: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async System.Threading.Tasks.Task SaveTaskNotes()
    {
        if (selectedTask == null || string.IsNullOrWhiteSpace(taskNotes))
        {
            Logger.LogWarning("Спроба зберегти коментар з порожнім текстом");
            return;
        }

        if (!AuthState.UserId.HasValue)
        {
            Logger.LogWarning("Спроба зберегти коментар без UserId");
            errorMessage = "User not authenticated";
            return;
        }

        Logger.LogInformation("Додавання коментаря: TaskId={TaskId}, UserId={UserId}, CommentLength={Length}",
            selectedTask.Id, AuthState.UserId.Value, taskNotes.Length);

        try
        {
            isLoading = true;
            errorMessage = "";

            await TaskService.CreateCommentAsync(
                taskId: selectedTask.Id,
                userId: AuthState.UserId.Value,
                description: taskNotes
            );

            Logger.LogInformation("Коментар успішно збережено: TaskId={TaskId}, UserId={UserId}",
                selectedTask.Id, AuthState.UserId.Value);

            taskNotes = "";
            await LoadCommentsForTask(selectedTask.Id);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Помилка збереження коментаря: TaskId={TaskId}, UserId={UserId}",
                selectedTask.Id, AuthState.UserId.Value);
            errorMessage = $"Failed to save comment: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async System.Threading.Tasks.Task DeleteTask()
    {
        if (selectedTask == null)
        {
            Logger.LogWarning("Спроба видалити завдання без вибраного завдання");
