@page "/storage"

<div class="min-h-screen bg-gradient-to-br from-orange-50 to-amber-100 flex items-center justify-center p-8">
    <div class="bg-white rounded-3xl shadow-2xl p-12 max-w-4xl w-full">
        <div class="flex items-center justify-between mb-8">
            <div>
                <h1 class="text-4xl font-bold text-gray-800 flex items-center gap-3">
                    <span class="text-5xl">💾</span>
                    Storage
                </h1>
                <p class="text-gray-500 mt-2">Manage your study materials</p>
            </div>
            <a href="/" class="px-6 py-3 bg-gray-100 hover:bg-gray-200 rounded-xl font-semibold transition-all">
                ← Home
            </a>
        </div>

        <div class="grid grid-cols-3 gap-6">
            <div class="bg-gradient-to-br from-blue-100 to-blue-200 rounded-2xl p-6 hover:shadow-lg transition-shadow cursor-pointer">
                <div class="text-4xl mb-3">📁</div>
                <h3 class="font-bold text-gray-800">Documents</h3>
                <p class="text-sm text-gray-600 mt-1">12 files</p>
            </div>
            <div class="bg-gradient-to-br from-green-100 to-green-200 rounded-2xl p-6 hover:shadow-lg transition-shadow cursor-pointer">
                <div class="text-4xl mb-3">📸</div>
                <h3 class="font-bold text-gray-800">Images</h3>
                <p class="text-sm text-gray-600 mt-1">8 files</p>
            </div>
            <div class="bg-gradient-to-br from-purple-100 to-purple-200 rounded-2xl p-6 hover:shadow-lg transition-shadow cursor-pointer">
                <div class="text-4xl mb-3">🎥</div>
                <h3 class="font-bold text-gray-800">Videos</h3>
                <p class="text-sm text-gray-600 mt-1">3 files</p>
            </div>
            <div class="bg-gradient-to-br from-red-100 to-red-200 rounded-2xl p-6 hover:shadow-lg transition-shadow cursor-pointer">
                <div class="text-4xl mb-3">📄</div>
                <h3 class="font-bold text-gray-800">PDFs</h3>
                <p class="text-sm text-gray-600 mt-1">15 files</p>
            </div>
            <div class="bg-gradient-to-br from-yellow-100 to-yellow-200 rounded-2xl p-6 hover:shadow-lg transition-shadow cursor-pointer">
                <div class="text-4xl mb-3">🎨</div>
                <h3 class="font-bold text-gray-800">Projects</h3>
                <p class="text-sm text-gray-600 mt-1">5 folders</p>
            </div>
            <div class="bg-gradient-to-br from-pink-100 to-pink-200 rounded-2xl p-6 hover:shadow-lg transition-shadow cursor-pointer">
                <div class="text-4xl mb-3">⭐</div>
                <h3 class="font-bold text-gray-800">Favorites</h3>
                <p class="text-sm text-gray-600 mt-1">7 items</p>
            </div>
        </div>

        <div class="mt-8 p-6 bg-gray-50 rounded-2xl">
            <div class="flex justify-between items-center mb-2">
                <span class="font-semibold text-gray-700">Storage Used</span>
                <span class="text-sm text-gray-600">2.4 GB / 10 GB</span>
            </div>
            <div class="w-full bg-gray-200 rounded-full h-3">
                <div class="bg-gradient-to-r from-blue-500 to-indigo-500 h-3 rounded-full" style="width: 24%"></div>
            </div>
        </div>
    </div>
</div>

