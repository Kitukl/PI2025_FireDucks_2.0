@code {
    private string searchQuery = "";
    private string filterType = "";
    private bool showFilterDropdown = false;
    private StorageItem? selectedItem = null;
    private bool isLoading = false;
    private string currentPath = "";
    private string errorMessage = "";
    private string successMessage = "";
    private bool showCreateFolderDialog = false;
    private string newFolderName = "";

    private List<string> folders = new();
    private List<string> files = new();

    private readonly List<string> systemFiles = new()
    {
        "dyskretna_shcherbyna.pdf",
        "matanaliz.pdf"
    };

    protected override async Task OnInitializedAsync()
    {
        Logger.LogInformation("Ініціалізація сторінки Storage");

        if (!AuthState.IsAuthenticated || !AuthState.UserId.HasValue)
        {
            Logger.LogWarning("Спроба доступу до Storage без автентифікації. Перенаправлення на /login");
            Navigation.NavigateTo("/login");
            return;
        }

        Logger.LogInformation("Користувач автентифікований: UserId={UserId}", AuthState.UserId.Value);
        await LoadStorageItems();
    }

    private async Task LoadStorageItems()
    {
        if (!AuthState.UserId.HasValue)
        {
            errorMessage = "User not authenticated";
            Logger.LogWarning("Спроба завантажити Storage без UserId");
            return;
        }

        Logger.LogInformation("Завантаження елементів Storage: UserId={UserId}, Path={Path}",
            AuthState.UserId.Value, currentPath ?? "Root");

        isLoading = true;
        errorMessage = "";
        successMessage = "";
        StateHasChanged();

        try
        {
            folders = (await Mediator.Send(new GetFoldersQuery(AuthState.UserId.Value, currentPath))).ToList();
            var userFiles = (await Mediator.Send(new GetFilesByPath(AuthState.UserId.Value, currentPath))).ToList();

            if (string.IsNullOrEmpty(currentPath))
            {
                files = systemFiles.Concat(userFiles).Distinct().ToList();
            }
            else
            {
                files = userFiles;
            }

            Logger.LogInformation("Storage завантажено: {FolderCount} папок, {FileCount} файлів. UserId={UserId}, Path={Path}",
                folders.Count, files.Count, AuthState.UserId.Value, currentPath ?? "Root");
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Помилка завантаження Storage: UserId={UserId}, Path={Path}",
                AuthState.UserId.Value, currentPath ?? "Root");
            errorMessage = "Failed to load files. Please try again.";
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task NavigateToPath(string folderName)
    {
        var previousPath = currentPath;

        if (string.IsNullOrEmpty(folderName))
        {
            currentPath = "";
        }
        else
        {
            currentPath = string.IsNullOrEmpty(currentPath)
                ? folderName
                : Path.Combine(currentPath, folderName);
        }

        Logger.LogInformation("Навігація до папки: {PreviousPath} -> {NewPath}, UserId={UserId}",
            previousPath ?? "Root", currentPath ?? "Root", AuthState.UserId);

        await LoadStorageItems();
    }

    private void ShowCreateFolderDialog()
    {
        Logger.LogInformation("Відкриття діалогу створення папки: Path={Path}", currentPath ?? "Root");
        showCreateFolderDialog = true;
        newFolderName = "";
    }

    private void CloseCreateFolderDialog()
    {
        showCreateFolderDialog = false;
        newFolderName = "";
    }

    private async Task HandleFolderKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter" && !string.IsNullOrWhiteSpace(newFolderName))
        {
            await CreateFolder();
        }
    }

    private async Task CreateFolder()
    {
        if (string.IsNullOrWhiteSpace(newFolderName))
            return;

        if (!AuthState.UserId.HasValue)
        {
            errorMessage = "User not authenticated";
            Logger.LogWarning("Спроба створити папку без автентифікації");
            return;
        }

        Logger.LogInformation("Створення папки: Name={FolderName}, Path={Path}, UserId={UserId}",
            newFolderName, currentPath ?? "Root", AuthState.UserId.Value);

        try
        {
            var folderPath = string.IsNullOrEmpty(currentPath)
                ? newFolderName
                : Path.Combine(currentPath, newFolderName);

            await Mediator.Send(new FolderCreateCommand(AuthState.UserId.Value, folderPath));

            Logger.LogInformation("Папка успішно створена: {FolderPath}, UserId={UserId}",
                folderPath, AuthState.UserId.Value);

            successMessage = $"Folder '{newFolderName}' created successfully!";
            CloseCreateFolderDialog();
            await LoadStorageItems();

            _ = Task.Run(async () =>
            {
                await Task.Delay(3000);
                successMessage = "";
                await InvokeAsync(StateHasChanged);
            });
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Помилка створення папки: Name={FolderName}, Path={Path}, UserId={UserId}",
                newFolderName, currentPath ?? "Root", AuthState.UserId.Value);
            errorMessage = $"Failed to create folder '{newFolderName}'";
            CloseCreateFolderDialog();
        }
    }

    private async Task DeleteFolder(string folderName)
    {
        if (!AuthState.UserId.HasValue)
        {
            errorMessage = "User not authenticated";
            Logger.LogWarning("Спроба видалити папку без автентифікації");
            return;
        }

        Logger.LogInformation("Запит на видалення папки: {FolderName}, Path={Path}, UserId={UserId}",
            folderName, currentPath ?? "Root", AuthState.UserId.Value);

        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm", $"Are you sure you want to delete the folder '{folderName}' and all its contents?");
        if (!confirmed)
        {
            Logger.LogInformation("Видалення папки скасовано користувачем: {FolderName}", folderName);
            return;
        }

        try
        {
            var folderPath = string.IsNullOrEmpty(currentPath)
                ? folderName
                : Path.Combine(currentPath, folderName);

            await Mediator.Send(new FolderDeleteCommand(AuthState.UserId.Value, folderPath));

            Logger.LogInformation("Папка успішно видалена: {FolderPath}, UserId={UserId}",
                folderPath, AuthState.UserId.Value);

            successMessage = $"Folder '{folderName}' deleted successfully!";
            await LoadStorageItems();

            _ = Task.Run(async () =>
            {
                await Task.Delay(3000);
                successMessage = "";
                await InvokeAsync(StateHasChanged);
            });
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Помилка видалення папки: {FolderName}, Path={Path}, UserId={UserId}",
                folderName, currentPath ?? "Root", AuthState.UserId.Value);
            errorMessage = $"Failed to delete folder '{folderName}'";
        }
    }

    private IEnumerable<string> GetCurrentFolders()
    {
        var filtered = folders.AsEnumerable();

        if (!string.IsNullOrEmpty(searchQuery))
        {
            filtered = filtered.Where(f => f.Contains(searchQuery, StringComparison.OrdinalIgnoreCase));
        }

        return filtered;
    }

    private IEnumerable<StorageItem> GetCurrentFiles()
    {
        var items = files.Select(f => new StorageItem { Name = f }).AsEnumerable();

        if (!string.IsNullOrEmpty(searchQuery))
        {
            items = items.Where(i => i.Name.Contains(searchQuery, StringComparison.OrdinalIgnoreCase));
        }

        if (!string.IsNullOrEmpty(filterType))
        {
            items = items.Where(i => GetFileType(i.Name) == filterType);
        }

        return items;
    }

    private async Task HandleFileUpload(InputFileChangeEventArgs e)
    {
        if (!AuthState.UserId.HasValue)
        {
            errorMessage = "User not authenticated";
            Logger.LogWarning("Спроба завантажити файли без автентифікації");
            return;
        }

        var fileCount = e.FileCount;
        Logger.LogInformation("Початок завантаження файлів: Count={FileCount}, Path={Path}, UserId={UserId}",
            fileCount, currentPath ?? "Root", AuthState.UserId.Value);

        isLoading = true;
        errorMessage = "";
        successMessage = "";
        StateHasChanged();

        try
        {
            var uploadedCount = 0;
            foreach (var file in e.GetMultipleFiles(10))
            {
                try
                {
                    Logger.LogInformation("Завантаження файлу: {FileName}, Size={FileSize} bytes",
                        file.Name, file.Size);

                    using var ms = new MemoryStream();
                    await file.OpenReadStream(maxAllowedSize: 10 * 1024 * 1024).CopyToAsync(ms);
                    var fileData = ms.ToArray();

                    await Mediator.Send(new FileCreateCommand(AuthState.UserId.Value, currentPath, fileData, file.Name));
                    uploadedCount++;

                    Logger.LogInformation("Файл успішно завантажено: {FileName}, UserId={UserId}",
                        file.Name, AuthState.UserId.Value);
                }
                catch (Exception ex)
                {
                    Logger.LogError(ex, "Помилка завантаження файлу: {FileName}, UserId={UserId}",
                        file.Name, AuthState.UserId.Value);
                    errorMessage = $"Failed to upload {file.Name}";
                }
            }

            if (uploadedCount > 0)
            {
                Logger.LogInformation("Завантаження завершено: {UploadedCount}/{TotalCount} файлів успішно, UserId={UserId}",
                    uploadedCount, fileCount, AuthState.UserId.Value);

                successMessage = $"{uploadedCount} file(s) uploaded successfully!";
                await LoadStorageItems();

                _ = Task.Run(async () =>
                {
                    await Task.Delay(3000);
                    successMessage = "";
                    await InvokeAsync(StateHasChanged);
                });
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Критична помилка завантаження файлів: UserId={UserId}", AuthState.UserId.Value);
            errorMessage = "File upload failed. Please try again.";
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task DeleteFile(string fileName)
    {
        if (!AuthState.UserId.HasValue)
        {
            errorMessage = "User not authenticated";
            Logger.LogWarning("Спроба видалити файл без автентифікації");
            return;
        }

        if (systemFiles.Contains(fileName))
        {
            Logger.LogWarning("Спроба видалити системний файл: {FileName}", fileName);
            errorMessage = "System files cannot be deleted";
            await Task.Delay(3000);
            errorMessage = "";
            return;
        }

        Logger.LogInformation("Запит на видалення файлу: {FileName}, Path={Path}, UserId={UserId}",
            fileName, currentPath ?? "Root", AuthState.UserId.Value);

        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm", $"Are you sure you want to delete '{fileName}'?");
        if (!confirmed)
        {
            Logger.LogInformation("Видалення файлу скасовано користувачем: {FileName}", fileName);
            return;
        }

        try
        {
            var filePath = string.IsNullOrEmpty(currentPath)
                ? fileName
                : Path.Combine(currentPath, fileName);

            await Mediator.Send(new FileDeleteCommand(AuthState.UserId.Value, filePath));

            Logger.LogInformation("Файл успішно видалено: {FilePath}, UserId={UserId}",
                filePath, AuthState.UserId.Value);

            successMessage = $"File '{fileName}' deleted successfully!";
            await LoadStorageItems();

            _ = Task.Run(async () =>
            {
                await Task.Delay(3000);
                successMessage = "";
                await InvokeAsync(StateHasChanged);
            });
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Помилка видалення файлу: {FileName}, Path={Path}, UserId={UserId}",
                fileName, currentPath ?? "Root", AuthState.UserId.Value);
            errorMessage = $"Failed to delete {fileName}";
        }
    }

