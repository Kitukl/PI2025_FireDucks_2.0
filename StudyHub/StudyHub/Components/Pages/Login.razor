@page "/login"

<div class="min-h-screen bg-gradient-to-br from-purple-50 to-pink-100 flex items-center justify-center p-8">
    <div class="bg-white rounded-3xl shadow-2xl p-12 max-w-md w-full">

        <div class="text-center mb-8">
            <div class="text-6xl mb-4">👋</div>
            <h1 class="text-4xl font-bold text-gray-800 mb-2">Welcome Back!</h1>
            <p class="text-gray-500">Log in to continue to StudyHub</p>
        </div>

        <div class="space-y-6">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Email</label>
                <input type="email"
                       placeholder="student@lnu.edu.ua"
                       class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" />
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Password</label>
                <input type="password"
                       placeholder="••••••••"
                       class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" />
            </div>

            <div class="text-right">
                <a href="/forgot-password" class="text-sm text-blue-600 hover:underline">
                    Forgot Password?
                </a>
            </div>

            <div>
                <button class="w-full bg-blue-600 hover:bg-blue-700 text-white py-3 rounded-lg font-semibold text-lg transition-all">
                    Log In
                </button>
            </div>

            <div class="!mt-4">
                <a href="/" class="block w-full bg-gradient-to-r from-purple-500 to-pink-500 text-white text-center py-3 rounded-xl font-semibold hover:shadow-lg transition-all">
                    Home
                </a>
            </div>


            <div class="text-center text-gray-500 !mt-6">
                Don't have an account?
                <a href="/register" class="font-medium text-blue-600 hover:underline">
                    Sign Up
                </a>
            </div>
        </div>
    </div>
</div>

