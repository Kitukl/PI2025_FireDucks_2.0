@page "/"
@page "/login"
@inject NavigationManager Navigation
@inject IUserService UserService
@inject AuthStateService AuthState
@inject ILogger<Login> Logger

<div class="auth-container">
    <div class="auth-logo">
        <img src="images/hat.png" alt="StudyHub" class="auth-logo-icon" />
        <h1 class="auth-logo-text"><span class="title-study">STUDY</span><span class="title-hub">HUB</span></h1>
    </div>
    <div class="auth-card">
        <div class="auth-mascot">
            <img src="images/fireduck.png" alt="FireDucks" />
        </div>
        <h2 class="auth-title">Log In</h2>
        <div class="auth-form">
            @if (showError)
            {
                <div class="alert alert-danger" style="color: red; margin-bottom: 10px; padding: 10px; border: 1px solid red;">
                    @errorMessage
                </div>
            }
            <div class="form-group">
                <label>e-mail:</label>
                <input type="email" @bind="email" class="form-input" />
            </div>
            <div class="form-group">
                <label>Password:</label>
                <input type="password" @bind="password" class="form-input" placeholder="****************" />
            </div>
            <div class="forgot-password-link">
                <a href="/forgot-password">Forgot Password</a>
            </div>
            <button class="auth-btn" @onclick="HandleLogin" disabled="@isLoading">
                @if (isLoading)
                {
                    <span>Loading...</span>
                }
                else
                {
                    <span>Log In</span>
                }
            </button>
            <div class="auth-footer">
                Don't have an account? <a href="/register">Sign Up</a>
            </div>
        </div>
    </div>
</div>

@code {
    private string email = "";
    private string password = "";
    private bool showError = false;
    private string errorMessage = "";
    private bool isLoading = false;

    private async Task HandleLogin()
    {
        Logger.LogInformation("Початок процесу входу на UI");

        showError = false;
        errorMessage = "";

        if (string.IsNullOrWhiteSpace(email))
        {
            showError = true;
            errorMessage = "Please enter your email";
            Logger.LogWarning("Валідація входу не пройдена: порожній email");
            return;
        }

        if (string.IsNullOrWhiteSpace(password))
        {
            showError = true;
            errorMessage = "Please enter your password";
            Logger.LogWarning("Валідація входу не пройдена: порожній пароль");
            return;
        }

        Logger.LogInformation("Валідація входу пройдена. Спроба входу: Email={Email}", email);

        try
        {
            isLoading = true;

            var response = await UserService.LoginAsync(email, password);

            if (response != null && response.Id > 0)
            {
                AuthState.SetAuthenticatedUser(response.Id, response.Name, response.Surname, response.Email, response.GroupName);

                Logger.LogInformation("Вхід успішний. Перенаправлення на /home. UserId={UserId}, Email={Email}",
                    response.Id, email);

                Navigation.NavigateTo("/home");
            }
            else
            {
                showError = true;
                errorMessage = "Invalid email or password";
                Logger.LogWarning("Невдалий вхід: неправильні дані. Email={Email}", email);
            }
        }
        catch (InvalidOperationException ex)
        {
            showError = true;
            errorMessage = ex.Message;
            Logger.LogWarning(ex, "InvalidOperationException при вході: Email={Email}, Message={Message}",
                email, ex.Message);
        }
        catch (Exception ex)
        {
            showError = true;
            errorMessage = "An error occurred during login. Please try again.";
            Logger.LogError(ex, "Помилка входу на UI: Email={Email}", email);
        }
        finally
        {
            isLoading = false;
        }
    }
}