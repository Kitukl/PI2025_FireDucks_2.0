@page "/forgot-password"

<div class="min-h-screen bg-gradient-to-br from-purple-50 to-pink-100 flex items-center justify-center p-8">
    <div class="bg-white rounded-3xl shadow-2xl p-12 max-w-md w-full">

        @if (!emailSent)
        {
            <div class="text-center mb-8">
                <div class="text-6xl mb-4">❓</div>
                <h1 class="text-4xl font-bold text-gray-800 mb-2">Forgot Password?</h1>
                <p class="text-gray-500">Enter your email to get a confirmation code.</p>
            </div>

            <div class="space-y-6">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">E-mail</label>
                    <input type="email"
                           placeholder="student@lnu.edu.ua"
                           class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" />
                </div>

                <div>
                    <button @onclick="SendCode" class="w-full bg-blue-600 hover:bg-blue-700 text-white py-3 rounded-lg font-semibold text-lg transition-all">
                        Send Code
                    </button>
                </div>
            </div>
        }
        else
        {
            <div class="text-center mb-8">
                <div class="text-6xl mb-4">🔐</div>
                <h1 class="text-4xl font-bold text-gray-800 mb-2">Reset Password</h1>
                <p class="text-gray-500">Check your email for a code.</p>
            </div>

            <div class="space-y-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Confirmation Code</label>
                    <input type="text"
                           placeholder="Enter code"
                           class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500" />
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">New Password</label>
                    <input type="password"
                           placeholder="••••••••"
                           class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500" />
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Confirm Password</label>
                    <input type="password"
                           placeholder="••••••••"
                           class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500" />
                </div>

                <div class="pt-2">
                    <button class="w-full bg-green-500 hover:bg-green-600 text-white py-3 rounded-lg font-semibold text-lg transition-all">
                        Reset Password
                    </button>
                </div>
            </div>
        }

        <div class="text-center text-gray-500 mt-6">
            Remembered your password?
            <a href="/login" class="font-medium text-blue-600 hover:underline">
                Back to Log In
            </a>
        </div>
    </div>
</div>

@code {
    private bool emailSent = false;

    //симулюється надсилання коду і перемикається UI
    private void SendCode()
    {
        // логіка надсилання коду на email
        // ...

        // Перемикання стану, щоб показати поля для введення коду
        emailSent = true;
    }
}