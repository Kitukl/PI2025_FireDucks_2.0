@page "/home"
@inject ILogger<Home> Logger
@inject AuthStateService AuthState
@inject NavigationManager Navigation

<div class="home-container">
    <div class="info-icon-wrapper" @onmouseenter="ShowPopup" @onmouseleave="HidePopup">
        <button class="info-icon-button">ℹ️</button>

        @if (showInfoPopup)
        {
            <div class="info-popup">
                <div class="popup-arrow"></div>
                <div class="popup-content">
                    <p><strong>Studyhub</strong> — is a productivity app designed to help you stay organized and never miss a deadline. It lets you manage your tasks with statuses and due dates in a simple kanban board, so you can clearly track your progress.</p>
                </div>
            </div>
        }
    </div>

    @if (showInfoPopup)
    {
        <div class="popup-overlay"></div>
    }
    <div class="home-header">
        <img src="images/hat.png" alt="StudyHub" class="home-logo-icon" />
        <h1 class="home-title"><span class="title-study">STUDY</span><span class="title-hub">HUB</span></h1>
    </div>

    <div class="home-cards">
        <a href="/profile" class="home-card">
            <span>My Profile</span>
        </a>

        <a href="/taskboard" class="home-card">
            <span>Task Board</span>
        </a>

        <a href="/schedule" class="home-card">
            <span>My Schedule</span>
        </a>

        <a href="/storage" class="home-card">
            <span>Storage</span>
        </a>
    </div>

    <div class="home-mascot">
        <img src="images/fireduck.png" alt="FireDucks Mascot" />
    </div>
</div>

<style>
    @@keyframes fadeInDown {
        from {
            opacity: 0;
            transform: translateY(-30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes float {
        0%, 100% {
            transform: translateY(0px);
        }

        50% {
            transform: translateY(-20px);
        }
    }

    @@keyframes pulse {
        0%, 100% {
            transform: scale(1);
        }

        50% {
            transform: scale(1.15);
        }
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes bounceIn {
        0% {
            opacity: 0;
            transform: scale(0.3) translateY(100px);
        }

        50% {
            opacity: 1;
            transform: scale(1.05);
        }

        70% {
            transform: scale(0.9);
        }

        100% {
            transform: scale(1);
        }
    }

    @@keyframes wiggle {
        0%, 100% {
            transform: rotate(0deg);
        }

        25% {
            transform: rotate(-5deg);
        }

        75% {
            transform: rotate(5deg);
        }
    }

    .home-header {
        animation: fadeInDown 0.8s ease;
    }

    .home-logo-icon {
        animation: float 3s ease-in-out infinite;
    }

    .title-hub {
        display: inline-block;
        animation: pulse 2s ease infinite;
    }

    .home-cards {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 20px;
        margin-bottom: 40px;
        max-width: 600px;
        margin-left: auto;
        margin-right: auto;
    }

    .home-card {
        position: relative;
        overflow: hidden;
        animation: fadeInUp 0.6s ease backwards;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

        .home-card:nth-child(1) {
            animation-delay: 0.1s;
        }

        .home-card:nth-child(2) {
            animation-delay: 0.2s;
        }

        .home-card:nth-child(3) {
            animation-delay: 0.3s;
        }

        .home-card:nth-child(4) {
            animation-delay: 0.4s;
        }

        .home-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
            transition: left 0.5s ease;
        }

        .home-card:hover {
            transform: translateY(-10px) scale(1.05);
            box-shadow: 0 15px 30px rgba(0,0,0,0.3);
        }

            .home-card:hover::before {
                left: 100%;
            }

    .home-mascot {
        animation: bounceIn 1s ease;
    }

        .home-mascot img {
            animation: wiggle 2s ease-in-out infinite;
        }

    .info-icon-button {
        transition: all 0.3s ease;
    }

        .info-icon-button:hover {
            transform: scale(1.1) rotate(15deg);
        }

    .info-popup {
        animation: fadeInDown 0.3s ease;
    }
</style>


@code {
    private bool showInfoPopup = false;

    protected override void OnInitialized()
    {
        Logger.LogInformation("Відкриття домашньої сторінки");

        if (AuthState.IsAuthenticated && AuthState.UserId.HasValue)
        {
            Logger.LogInformation("Користувач на домашній сторінці: UserId={UserId}, Name={Name}",
                AuthState.UserId.Value, AuthState.UserName ?? "Unknown");
        }
        else
        {
            Logger.LogWarning("Відкриття домашньої сторінки без автентифікації");
        }
    }

    private void ShowPopup()
    {
        Logger.LogDebug("Відображення інформаційного попапу");
        showInfoPopup = true;
    }

    private void HidePopup()
    {
        Logger.LogDebug("Приховування інформаційного попапу");
        showInfoPopup = false;
    }

    private void LogNavigation(string destination)
    {
        Logger.LogInformation("Навігація з домашньої сторінки: Destination={Destination}, UserId={UserId}",
            destination, AuthState.UserId);
    }
}