@page "/profile"

<div class="min-h-screen bg-gradient-to-br from-purple-50 to-pink-100 flex items-center justify-center p-8">
    <div class="bg-white rounded-3xl shadow-2xl p-12 max-w-2xl w-full">
        <div class="text-center mb-8">
            <div class="text-6xl mb-4">👤</div>
            <h1 class="text-4xl font-bold text-gray-800 mb-2">My Profile</h1>
            <p class="text-gray-500">Manage your personal information</p>
        </div>

        <div class="space-y-4 mb-8">
            <div class="p-4 bg-gray-50 rounded-xl">
                <p class="text-sm text-gray-600">Name</p>
                <p class="text-lg font-semibold">Student Name</p>
            </div>
            <div class="p-4 bg-gray-50 rounded-xl">
                <p class="text-sm text-gray-600">Group</p>
                <p class="text-lg font-semibold">Select your group</p>
            </div>
            <div class="p-4 bg-gray-50 rounded-xl">
                <p class="text-sm text-gray-600">University</p>
                <p class="text-lg font-semibold">LNU</p>
            </div>
        </div>

        <div class="flex gap-4 mb-4">
            <a href="/login" class="block w-full bg-blue-500 text-white text-center py-3 rounded-xl font-semibold hover:bg-blue-600 transition-all">
                Логін
            </a>
            <a href="/register" class="block w-full bg-green-500 text-white text-center py-3 rounded-xl font-semibold hover:bg-green-600 transition-all">
                Реєстрація
            </a>
        </div>

        <a href="/" class="block w-full bg-gradient-to-r from-purple-500 to-pink-500 text-white text-center py-4 rounded-xl font-semibold hover:shadow-lg transition-all">
            ← Back to Home
        </a>
    </div>
</div>